
 
<!-- Loop over each object in the books array -->
{{#each books as |book| }}
<div class="row mb-4 book">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      
      <a href="/book/{{book.id}}">{{book.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money"></span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">Written by {{ book.needed_funding}}</span>
     
    </p>
    <p>Finsihed reading {{book.user.name}} on {{format_date book.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{book.description}}
    </p>
  </div>
</div>
{{/each}}

<script src="/js/booksearch.js"></script>